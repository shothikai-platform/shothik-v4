  "item": [
    {
      "name": "Core AI Detection",
      "description": "Core APIs for AI content detection and analysis",
      "item": [
        {
          "name": "1. AI Detector Check (Scan Content)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"This is sample text to check for AI generation. The text should be long enough to provide meaningful analysis. AI-generated content often has certain patterns that can be detected through sophisticated algorithms.\",\n  \"settings\": {\n    \"sensitivity\": \"medium\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/check",
              "host": ["{{base_url}}"],
              "path": ["api", "ai-detector", "check"]
            },
            "description": "Analyze text content to detect AI-generated sentences.\n\n**Response includes:**\n- Overall AI score\n- AI/Human probability percentages\n- Sentence-level analysis with confidence scores"
          },
          "response": [
            {
              "name": "Success Response",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"success\": true,\n  \"data\": {\n    \"overallScore\": 0.75,\n    \"aiProbability\": 75,\n    \"humanProbability\": 25,\n    \"sentences\": [\n      {\n        \"text\": \"This is sample text to check for AI generation.\",\n        \"aiScore\": 0.8,\n        \"classification\": \"AI\",\n        \"confidence\": \"high\"\n      }\n    ],\n    \"summary\": {\n      \"totalSentences\": 2,\n      \"aiSentences\": 1,\n      \"humanSentences\": 1\n    }\n  }\n}"
            }
          ]
        }
      ]
    },
