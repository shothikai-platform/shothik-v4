{
  "info": {
    "_postman_id": "paraphrase-service-2025",
    "name": "Shothik AI - Paraphrase Service",
    "description": "Complete API collection for Shothik AI Paraphrase Service including paraphrasing, auto-freeze, custom modes, and history management.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "shothik-ai-paraphrase"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://api-qa.shothik.ai",
      "type": "string"
    },
    {
      "key": "api_prefix",
      "value": "https://api-qa.shothik.ai/api",
      "type": "string"
    },
    {
      "key": "paraphrase_base",
      "value": "https://api-qa.shothik.ai/p-v2/api",
      "type": "string"
    },
    {
      "key": "modes_base",
      "value": "https://api-qa.shothik.ai/p-v2/api/modes",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Core Paraphrase",
      "item": [
        {
          "name": "Paraphrase V2",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"This is a sample text that needs to be paraphrased using advanced AI algorithms.\",\n  \"mode\": \"fluency\",\n  \"language\": \"en\",\n  \"settings\": {\n    \"strength\": \"medium\",\n    \"preserveFormatting\": true,\n    \"autoFreeze\": true\n  }\n}"
            },
            "url": {
              "raw": "{{paraphrase_base}}/paraphraseV2",
              "host": ["{{paraphrase_base}}"],
              "path": ["paraphraseV2"]
            },
            "description": "Main paraphrasing endpoint using V2 engine. Supports multiple modes (fluency, creative, formal, etc.)"
          },
          "response": []
        },
        {
          "name": "Paraphrase for Tagging",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Sample text for paraphrasing with tag preservation.\",\n  \"tags\": [\n    {\n      \"start\": 0,\n      \"end\": 6,\n      \"type\": \"preserve\"\n    }\n  ],\n  \"mode\": \"fluency\"\n}"
            },
            "url": {
              "raw": "{{paraphrase_base}}/paraphrase-for-tagging",
              "host": ["{{paraphrase_base}}"],
              "path": ["paraphrase-for-tagging"]
            },
            "description": "Paraphrase text while preserving specific tagged sections (useful for maintaining names, technical terms, etc.)"
          },
          "response": []
        },
        {
          "name": "Get Uses Limit",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"feature\": \"paraphrase\"\n}"
            },
            "url": {
              "raw": "{{api_prefix}}/uses-limit",
              "host": ["{{api_prefix}}"],
              "path": ["uses-limit"]
            },
            "description": "Check remaining paraphrase quota/usage limits for the authenticated user"
          },
          "response": []
        }
      ],
      "description": "Core paraphrasing APIs including main paraphrase engine and usage tracking"
    },
    {
      "name": "Auto-Freeze",
      "item": [
        {
          "name": "Detect Auto-Freeze Terms",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Albert Einstein developed the theory of relativity. His work on E=mcÂ² revolutionized physics.\",\n  \"language\": \"en\",\n  \"useLLM\": true\n}"
            },
            "url": {
              "raw": "{{api_prefix}}/auto-freeze/detect",
              "host": ["{{api_prefix}}"],
              "path": ["auto-freeze", "detect"]
            },
            "description": "Automatically detect terms that should be frozen (not paraphrased) such as names, technical terms, formulas, etc."
          },
          "response": []
        },
        {
          "name": "Disable Auto-Freeze Term",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"term\": \"Albert Einstein\"\n}"
            },
            "url": {
              "raw": "{{api_prefix}}/auto-freeze/disable",
              "host": ["{{api_prefix}}"],
              "path": ["auto-freeze", "disable"]
            },
            "description": "Disable auto-freeze for a specific term, allowing it to be paraphrased"
          },
          "response": []
        },
        {
          "name": "Enable Auto-Freeze Term",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"term\": \"quantum mechanics\"\n}"
            },
            "url": {
              "raw": "{{api_prefix}}/auto-freeze/enable",
              "host": ["{{api_prefix}}"],
              "path": ["auto-freeze", "enable"]
            },
            "description": "Enable auto-freeze for a specific term to preserve it during paraphrasing"
          },
          "response": []
        },
        {
          "name": "Get Disabled Terms",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{api_prefix}}/auto-freeze/disabled-terms",
              "host": ["{{api_prefix}}"],
              "path": ["auto-freeze", "disabled-terms"]
            },
            "description": "Get list of terms that user has disabled from auto-freeze"
          },
          "response": []
        }
      ],
      "description": "Auto-freeze feature for preserving specific terms during paraphrasing"
    },
